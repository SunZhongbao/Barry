#!/usr/bin/env bash


if test "$REPO_INFO"; then
    $REPO_INFO project | grep . ||
        ap
    exit
elif lookup-file -e .repo/manifest.xml >/dev/null 2>&1 && ! [[ $PWD =~ /.repo/manifests ]]; then
    (
        if git_dir=$(lookup-file -e .git/..); then
            cd "$git_dir"
            repo forall . -c 'echo $REPO_PROJECT' || basename $(git-remote-url)
        elif [[ $PWD =~ \.git($|/) ]]; then
            cd $(echo "$PWD" | perl -npe 's,\.git($|/.*),.git,')
            ap | perl -pe 's,\.git,,'
        fi
    )
    exit
fi

remote=
branch=$(git-tracking-branch)
if test "$branch"; then
    remote=$(git config branch.$branch.remote)
fi

if test -z "${remote}"; then
    remote=origin
fi

url=$(git config remote.$remote.url)

if [[ $url =~ :// ]]; then
    echo ${url} | perl -pe 's,.*?://.*?/+,,'
else
    echo ${url#*:}
fi
