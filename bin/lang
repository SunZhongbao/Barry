#!/usr/bin/env bash

set-lang() {
    if test "$1" = lang; then
        set -- en_US
    fi
    export LANG=$1.UTF-8
    export LC_ALL=$1.UTF-8
    export LANGUAGE=$1:en
}

if test "$(readlink -f "$BASH_SOURCE")" = "$(readlink -f "$(echo "$0" | grep / || which "$0" 2>/dev/null)" )"; then
    set-lang $(basename $0)
else
    set-lang $(basename "${BASH_SOURCE}")
    return 0
fi

exec "$@"
